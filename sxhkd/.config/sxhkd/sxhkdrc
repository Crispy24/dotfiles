# See environment variables in .bashrc for dereferencing any variables below

# make sxhkd reload its configuration files:
super + x ; super + x
  pkill -USR1 -x sxhkd

#
# Generic keybindings
#

super + Return
  $TERMINAL
control + alt + t
  $TERMINAL
super + d
  $LAUNCHER
super + Escape
  $HOME/bin/menu.sh
super + F1
  $HOME/bin/menu.sh

ctrl + alt + Delete
  $TERMINAL -e htop

# Screenshot - full screen, and active window
{_,alt} + Print
  scrot {_,-u} $HOME/images/screenshots/%Y-%m-%d-%H%M%S-scrot.png

#
# Quick keybindings for common programs
#

super + bracketleft
  emacs
super + bracketright
  google-chrome-stable

#
# Grouped program-launching keybindings
# (using either prefix super+x or super+p)
#

super + {x,p} ; c
  google-chrome-stable
super + {x,p} ; d
  discord
super + {x,p} ; e
  $TERMINAL -e ranger
super + {x,p} ; g
  galculator
super + {x,p} ; l
  emacs -f ledger
super + {x,p} ; m
  $HOME/bin/menu.sh
super + {x,p} ; p
  passmenu

#
# Special keys
#

XF86Tools
  $HOME/bin/themeselect.sh
XF86Search
  $HOME/bin/displayselect.sh
XF86LaunchA
  $HOME/bin/displayselect.sh
XF86Explorer
  $HOME/bin/displayselect.sh
XF86Display
  $HOME/bin/displayselect.sh

XF86Calculator
  galculator

# Works on my mechanical keyboard
Menu
  $HOME/bin/menu.sh

#
# Multimedia keys
#

XF86AudioRaiseVolume
  pactl set-sink-volume @DEFAULT_SINK@ +5%; refreshbar.sh
XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -5%; refreshbar.sh
XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle; refreshbar.sh
super + XF86AudioMute
  pactl set-sink-volume @DEFAULT_SINK@ 100%; refreshbar.sh
XF86AudioMicMute
  pactl set-source-mute @DEFAULT_SOURCE@ toggle

#
# Wacom tablet buttons
# (from left-to-right)
#

button11
  xdotool key ctrl+z
button12
  xdotool key x
button13
  xdotool key x
button14
  xdotool key ctrl+z
