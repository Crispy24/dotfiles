# My own PKGBUILD for installing my configuration of dwmstatus
pkgname=dwmstatus
pkgver=1
pkgrel=1
pkgdesc="Status bar setter for DWM" # Is it for DWM exclusively?
arch=('i686' 'x86_64')
url="http://dwm.suckless.org/dwmstatus/"
license=('MIT')
depends=()
provides=("dwmstatus")
conflicts=("dwmstatus")
source=(config.mk
        dwmstatus.c
        LICENSE
        Makefile
)
md5sums=('SKIP'
         'SKIP'
         'SKIP'
         'SKIP'
)

build() {
  cd "$srcdir"
  make clean all
}

package() {
  cd "$srcdir"
  make DESTDIR="$pkgdir/" install
}
