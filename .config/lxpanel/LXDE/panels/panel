# lxpanel <profile> config file. Manually editing is not recommended.
# Use preference dialog in lxpanel to adjust config when you can.

Global {
  edge=bottom
  allign=left
  margin=0
  widthtype=percent
  width=100
  height=26
  transparent=0
  tintcolor=#2d2d2d
  alpha=255
  setdocktype=1
  setpartialstrut=1
  usefontcolor=0
  fontcolor=#ffffff
  background=0
  backgroundfile=/usr/share/lxpanel/images/background.png
  align=left
  monitor=0
  autohide=0
  usefontsize=0
  iconsize=24
  heightwhenhidden=2
}
