" ==================================================
" .vimrc
" ==================================================

" Set some requirements for Vundle
set nocompatible
filetype off
set rtp+=~/.vim/bundle/Vundle.vim

" Declare all the desired plugins
call vundle#begin()
" Let Vundle manage itself
Plugin 'VundleVim/Vundle.vim'

Plugin 'chriskempson/base16-vim'
Plugin 'ledger/vim-ledger'
Plugin 'sirtaj/vim-openscad'
"Plugin 'vim-airline/vim-airline'
"Plugin 'scrooloose/nerdtree'
"Plugin 'ctrlpvim/ctrlp.vim'
call vundle#end()

filetype plugin indent on

" ==================================================
" General settings
" ==================================================

" Set colorscheme
colorscheme base16-default-dark
set colorcolumn=80
highlight ColorColumn ctermbg=darkgray
" Set colorscheme overrides
"augroup myBetterColors
"  au!
autocmd ColorScheme *  highlight! Normal ctermbg=none guibg=NONE
"augroup END

" Configure tab and indent settings
set expandtab
set tabstop=2
set softtabstop=2
set shiftwidth=2
"set cindent
"set autoindent

" Set tab-completion preferences
set wildmode=longest,list,full
"set wildmode=longest,list " Bash-like completion
set wildmenu

" Turn on syntax highlighting
syntax on

" Move .viminfo file
set viminfo+=n~/.vim/viminfo

" Enable line numbering
set number
"set relativenumber
" Highlight cursor's line
set cursorline

" No text wrap by default
set nowrap
set linebreak " If wrap is on: logical linebreaks occur at the end of words
set textwidth=80

" ==================================================
" Filetype settings
" ==================================================

autocmd Filetype c setlocal ts=4 sts=4 sw=4
autocmd Filetype cpp setlocal ts=4 sts=4 sw=4

" ==================================================
" Plugin settings
" ==================================================

" Configure ledger settings
let g:ledger_maxwidth = 80
let g:ledger_align_at = 50
let g:ledger_date_format = '%Y-%m-%d'
autocmd Filetype ledger setlocal ts=4 sts=4 sw=4

" Configure vim-airline
"set laststatus=2
"set ttimeoutlen=10
"if !exists('g:airline_symbols')
"  let g:airline_symbols = {}
"endif
"let g:airline_left_sep = ''
"let g:airline_right_sep = ''
"let g:airline_symbols.linenr = '¶'
""let g:airline_symbols.branch = '⎇'
"let g:airline_symbols.branch = 'b'

" Configure syntastic
"set statusline+=%#warningmsg#
"set statusline+=%{SyntasticStatuslineFlag()}
"set statusline+=%*
"let g:syntastic_always_populate_loc_list = 1
"let g:syntastic_auto_loc_list = 1
"let g:syntastic_check_on_open = 1
"let g:syntastic_check_on_wq = 0

" Configure ctrlp fuzzy finder
"let g:ctrlp_map = '<c-p>'
"let g:ctrlp_cmd = 'CtrlP'

" ==================================================
" Shortcuts
" ==================================================

command Vimrc e ~/.vim/vimrc

" ==================================================
" Abbreviations
" ==================================================

" Inserts YYYY-MM-DD
iab <expr> dts strftime('%F')

" ==================================================
" Keybindings
" ==================================================

"nnoremap <F2> :NERDTreeToggle<cr>
nnoremap <F4> :make!<cr>
nnoremap <F5> :make run!<cr>
"nnoremap <F8> :TagbarToggle<cr>
nnoremap <F12> :set cursorline!<cr>
